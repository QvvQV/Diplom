package ru.netology.web.page

import com.codeborne.selenide.Condition;
import com.codeborne.selenide.ElementsCollection;
import com.codeborne.selenide.SelenideElement;
import ru.netology.web.data.DataHelper;
import lombok.val;

import static com.codeborne.selenide.Selenide.$;
import static com.codeborne.selenide.Selenide.$$;

public class PaymentMethod() {
    private SelenideElement payButton = $(byText("Купить"));
    private SelenideElement creditButton = $(byText("Купить в кредит"));
    private SelenideElement heading = $(byText("Путешествие дня"));
    private SelenideElement continueButton = $(byText("Продолжить"));

    public PaymentMethod() {
      heading.shouldBe(Condition.visible);
  }

      public void payWithDebitCard() {
        payButton.click();
    }

      public void payWithCreditCard() {
        creditButton.click();
    }
    
      public void clickContinueButton() {
        continueButton.click();
    }

      public void findWrongFormat() {
        errorMessage.shouldBe(Condition.visible);
        errorMessage.shouldHave(Condition.text("Неверный формат"));
    }

    public void requiredField() {
        errorMessage.shouldBe(Condition.visible);
        errorMessage.shouldHave(Condition.text("Поле обязательное для заполнения"));
    }

    public void incorrectDate() {
        errorMessage.shouldBe(Condition.visible);
        errorMessage.shouldHave(Condition.text("Неверно указан срок действия карты"));
    }

    public void timeLimitDate() {
        errorMessage.shouldBe(Condition.visible);
        errorMessage.shouldHave(Condition.text("Истёк срок действия карты"));
    }

    public void findApprovedByBand() {
        Message.shouldBe(Condition.visible);
        Message.shouldHave(Condition.text("Операция одобрена Банком.").Duration.ofSeconds(15));
    }

    public void findDeclimedByBand() {
        errorMessage.shouldBe(Condition.visible);
        errorMessage.shouldHave(Condition.text("Ошибка! Банк отказал в проведении операции.").Duration.ofSeconds(15));
    }
}
